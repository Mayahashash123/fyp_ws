<?xml version="1.0"?>
<robot name="LibraryBot">

    <gazebo reference="base_link">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="back_left_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="back_right_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="front_left_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="front_right_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <link name="base_footprint" />

    <link name="base_link">
        <visual>
            <!-- <origin xyz="0.0 0.0 0.0" rpy="0 0 0" /> -->
            <origin xyz="0.25 -0.26 0.0" rpy="1.57 0 3.14" />
            <geometry>
                <!-- <box size="0.502 0.284 0.182" /> -->
                <mesh filename="package://mybot_pkg/meshes/v3_ros.STL" scale="0.0015 0.0015 0.0018"/>
            </geometry>
            <material name="White">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>

        <collision>
            <geometry>
                <box size="0.502 0.284 0.182" />
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="10.0" />
            <inertia ixx="0.3792666666666666" ixy="0.0" ixz="0.0" iyy="1.1088666666666667" iyz="0.0"
                izz="0.9504266666666665" />
        </inertial>
    </link>
    <joint name="joint base" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
    </joint>


    <link name="back_left_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963267949 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
            <material name="White">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <mass value="3.0" />
            <inertia ixx="0.00855625" ixy="0" ixz="0" iyy="0.00855625" iyz="0" izz="0.015" />
        </inertial>
    </link>

    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_left_wheel_link" />
        <origin xyz="-0.15 0.18 -0.05" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="back_right_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963267949 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
            <material name="White">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <mass value="3.0" />
            <inertia ixx="0.00855625" ixy="0" ixz="0" iyy="0.00855625" iyz="0" izz="0.015" />
        </inertial>
    </link>


    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_right_wheel_link" />
        <origin xyz="-0.15 -0.18 -0.05" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- *********************** Front WHEEL ******************************  -->


    <link name="front_left_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963267949 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
            <material name="White">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <mass value="3.0" />
            <inertia ixx="0.00855625" ixy="0" ixz="0" iyy="0.00855625" iyz="0" izz="0.015" />
        </inertial>
    </link>

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_left_wheel_link" />
        <origin xyz="0.15 0.18 -0.05" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="front_right_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963267949 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
            <material name="White">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.05" />
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <mass value="3.0" />
            <inertia ixx="0.00855625" ixy="0" ixz="0" iyy="0.00855625" iyz="0" izz="0.015" />
        </inertial>
    </link>

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_right_wheel_link" />
        <origin xyz="0.15 -0.18 -0.05" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- *********************** LIDAR SETUP *********************************  -->


    <link name="lidar_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.039" length="0.023" />
            </geometry>
            <material name="">
                <color rgba="0.1 0.1 0.1 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.039" length="0.023" />
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1.0" />
            <inertia ixx="0.0009135833333333333" ixy="0.0" ixz="0.0" iyy="0.0009135833333333333"
                iyz="0.0" izz="0.0007605" />
        </inertial>
    </link>

    <joint name="lidar_joint" type="fixed">
        <parent link="base_link" />
        <child link="lidar_link" />
        <origin xyz="0 0 0.1025" rpy="0 0 0" />
    </joint>

    <gazebo reference="lidar_link">
        <sensor type="ray" name="head_hokuyo_sensor">
          <pose>0 0 0 0 0 0</pose>
          <visualize>true</visualize>
          <update_rate>40</update_rate>
          <ray>
            <scan>
              <horizontal>
                <samples>720</samples>
                <resolution>1</resolution>
                <min_angle>-3.14159</min_angle>
                <max_angle>3.14159</max_angle>
              </horizontal>
            </scan>
            <range>
              <min>0.10</min>
              <max>10.0</max>
              <resolution>0.01</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.01</stddev>
            </noise>
          </ray>
          <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
            <topicName>/scan</topicName>
            <frameName>lidar_link</frameName>
          </plugin>
        </sensor>
      </gazebo>

    <gazebo>
        <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
            <updateRate>100.0</updateRate>
            <robotNamespace>/</robotNamespace>
            <leftFrontJoint>front_left_wheel_joint</leftFrontJoint>
            <rightFrontJoint>front_right_wheel_joint</rightFrontJoint>
            <leftRearJoint>back_left_wheel_joint</leftRearJoint>
            <rightRearJoint>back_right_wheel_joint</rightRearJoint>
            <wheelSeparation>0.36</wheelSeparation>
            <wheelDiameter>0.15</wheelDiameter>
            <robotBaseFrame>base_footprint</robotBaseFrame>
            <torque>20</torque>
            <topicName>cmd_vel</topicName>
            <broadcastTF>true</broadcastTF>
        </plugin>
    </gazebo>

</robot>